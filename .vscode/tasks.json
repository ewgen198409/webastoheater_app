{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Сборка релиза APK (signed)",
            "type": "shell",
            "command": "gradlew.bat",
            "args": [
                "assembleRelease"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Установить релиз APK на устройство",
            "type": "shell",
            "command": "adb",
            "args": [
                "install",
                "-r",
                "app/build/outputs/apk/release/WebastoHeater-1.1.2.apk"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}