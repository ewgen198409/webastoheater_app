<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Карточка темы -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Тема приложения"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:paddingBottom="8dp" />

                <!-- Переключатель темы -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Темная тема"
                        android:textColor="?android:attr/textColorPrimary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/theme_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка статуса настроек -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/settings_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Настройки не загружены"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка размера насоса -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Размер насоса"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:paddingBottom="8dp" />

                <!-- Размер насоса -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Размер насоса (10-100 мл/1000имп)"
                        android:textColor="?android:attr/textColorPrimary" />

                    <SeekBar
                        android:id="@+id/pump_size_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="90" />

                    <TextView
                        android:id="@+id/pump_size_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка настроек температуры -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Настройки температуры"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:paddingBottom="8dp" />

                <!-- Целевая температура -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Целевая температура нагревателя (150-250°C)"
                        android:textColor="?android:attr/textColorPrimary" />

                    <SeekBar
                        android:id="@+id/target_temp_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100" />

                    <TextView
                        android:id="@+id/target_temp_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="150°C"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Минимальная температура -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Минимальная температура (140-240°C)"
                        android:textColor="?android:attr/textColorPrimary" />

                    <SeekBar
                        android:id="@+id/min_temp_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100" />

                    <TextView
                        android:id="@+id/min_temp_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="140°C"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Температура перегрева -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Температура перегрева (200-300°C)"
                        android:textColor="?android:attr/textColorPrimary" />

                    <SeekBar
                        android:id="@+id/overheat_temp_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100" />

                    <TextView
                        android:id="@+id/overheat_temp_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200°C"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Температура предупреждения -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Температура предупреждения (180-280°C)"
                        android:textColor="?android:attr/textColorPrimary" />

                    <SeekBar
                        android:id="@+id/warning_temp_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100" />

                    <TextView
                        android:id="@+id/warning_temp_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="180°C"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка настроек вентилятора -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Настройки вентилятора"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:paddingBottom="8dp" />

                <!-- Макс. ШИМ вентилятора -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Макс. ШИМ вентилятора (0-255)"
                        android:textColor="?android:attr/textColorPrimary" />

                    <SeekBar
                        android:id="@+id/fan_pwm_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255" />

                    <TextView
                        android:id="@+id/fan_pwm_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка настроек свечи накаливания -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Настройки свечи накаливания"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:paddingBottom="8dp" />

                <!-- Яркость свечи -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Яркость свечи (0-255)"
                        android:textColor="?android:attr/textColorPrimary" />

                    <SeekBar
                        android:id="@+id/glow_brightness_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255" />

                    <TextView
                        android:id="@+id/glow_brightness_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Время розжига свечи -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Время розжига свечи (0-60000 мс)"
                        android:textColor="?android:attr/textColorPrimary" />

                    <SeekBar
                        android:id="@+id/glow_fade_in_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="600" />

                    <TextView
                        android:id="@+id/glow_fade_in_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 мс"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Время затухания свечи -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Время затухания свечи (0-60000 мс)"
                        android:textColor="?android:attr/textColorPrimary" />

                    <SeekBar
                        android:id="@+id/glow_fade_out_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="600" />

                    <TextView
                        android:id="@+id/glow_fade_out_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 мс"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка кнопок управления -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Кнопки управления настройками -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/save_settings_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Сохранить"
                        android:layout_marginEnd="4dp"
                        android:elevation="6dp"
                        android:background="@drawable/button_ripple"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/load_settings_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Считать"
                        android:layout_marginStart="4dp"
                        android:elevation="6dp"
                        android:background="@drawable/button_ripple"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <!-- Дополнительные кнопки -->
                <Button
                    android:id="@+id/reset_settings_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сбросить настройки"
                    android:elevation="6dp"
                    android:background="@drawable/button_ripple"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>