<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Карточка статуса -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginEnd="12dp"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Состояние: unavailable"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка показателей -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Мониторинг"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <!-- Температура выхлопа -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/thermometer"
                        android:layout_marginEnd="12dp"
                        app:tint="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/exhaust_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Температура выхлопа: unavailable °C"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Скорость вентилятора -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/fan"
                        android:layout_marginEnd="12dp"
                        app:tint="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/fan_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Скорость вентилятора: unavailable %"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Частота насоса -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/gas"
                        android:layout_marginEnd="12dp"
                        app:tint="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/fuel_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Частота насоса: unavailable Гц"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Свеча накаливания -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/candle"
                        android:layout_marginEnd="12dp"
                        app:tint="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/glow_plug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Свеча накаливания: Неактивна"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Время цикла -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/clock"
                        android:layout_marginEnd="12dp"
                        app:tint="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/cycle_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Время цикла: unavailable"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Попытка запуска -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_marginStart="0dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/refresh"
                        android:layout_marginEnd="12dp"
                        app:tint="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/ignit_fail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Попытка запуска: unavailable"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Ошибки Webasto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/alert"
                        android:layout_marginEnd="12dp"
                        app:tint="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/webasto_fail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ошибки Webasto: Нет"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

                <!-- Текущий режим -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/recycle"
                        android:layout_marginEnd="12dp"
                        app:tint="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/current_state_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Текущий режим: unavailable"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка управления -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- Кнопка включения/выключения нагрева -->
                <Button
                    android:id="@+id/burn_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Включить нагрев"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:elevation="6dp"
                    android:background="@drawable/button_3d_effect_on"
                    app:backgroundTint="@null"
                    android:textColor="@android:color/white" />

                <!-- Кнопки управления в сетке -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/down_mode_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Up"
                        android:layout_marginEnd="4dp"
                        android:elevation="6dp"
                        android:background="@drawable/button_3d_effect"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/up_mode_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Down"
                        android:layout_marginStart="4dp"
                        android:elevation="6dp"
                        android:background="@drawable/button_3d_effect"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/fuel_pump_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Прокачка"
                        android:layout_marginEnd="4dp"
                        android:elevation="6dp"
                        android:background="@drawable/button_3d_effect"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/clear_fail_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Сброс ошибки"
                        android:layout_marginStart="4dp"
                        android:elevation="6dp"
                        android:background="@drawable/button_3d_effect"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>