<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Карточка статуса -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Состояние: unavailable"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка показателей -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Показатели"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/exhaust_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Температура выхлопа: unavailable °C"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/fan_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Скорость вентилятора: unavailable %"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/fuel_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Частота насоса: unavailable Гц"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/glow_plug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Свеча накаливания: Неактивна"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/cycle_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Cycle Time: unavailable сек"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/ignit_fail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Попытка запуска: unavailable"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/webasto_fail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Ошибки Webasto: Нет"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/current_state_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Текущий режим: unavailable"
                    android:textColor="?android:attr/textColorPrimary" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Карточка управления -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- Кнопка включения/выключения нагрева -->
                <Button
                    android:id="@+id/burn_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Включить нагрев"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@android:color/white" />

                <!-- Кнопки управления в сетке -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/down_mode_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Up"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/up_mode_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Down"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/fuel_pump_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Прокачка"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/clear_fail_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Сброс ошибки"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>