<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state (red, more pronounced raised effect) -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:startColor="#EF5350"
                android:endColor="#752323"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#C62828" /> <!-- Красная обводка -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Pressed state (red, more pronounced sunken effect) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:startColor="#752323"
                android:endColor="#EF5350"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#B71C1C" /> <!-- Более темная красная обводка -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>