<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state (green, more pronounced raised effect) -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:startColor="#8BC34A"
                android:endColor="#4CAF50"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#388E3C" /> <!-- Зеленая обводка -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Pressed state (green, more pronounced sunken effect) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:startColor="#388E3C"
                android:endColor="#8BC34A"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2E7D32" /> <!-- Более темная зеленая обводка -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>